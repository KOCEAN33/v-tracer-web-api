{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "../src/assets/**/*",
        "outDir" : "dist/"
      },
      {
        "include": "../src/common/config/env/*.env",
        "outDir" : "dist/"
      }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}